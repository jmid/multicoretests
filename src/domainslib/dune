;; tests of Domainslib

;; this prevents the tests from running on a default build
(alias
 (name default)
 (package multicoretests)
 (deps
   chan_stm_tests.exe
   task_one_dep.exe
   task_more_deps.exe
   task_parallel.exe))

;; tests of Domainslib.Task's async functionality (non-STM_Seq STM_Domain STM_Thread)

(executable
 (name task_one_dep)
 (modes native byte)
 (modules task_one_dep)
 (libraries util qcheck domainslib)
 (preprocess (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps task_one_dep.exe)
 (action (run ./%{deps} --no-colors --verbose)))

(executable
 (name task_more_deps)
 (modes native byte)
 (modules task_more_deps)
 (libraries util qcheck domainslib)
 (preprocess (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (deps task_more_deps.exe)
 (package multicoretests)
 (action (run ./%{deps} --no-colors --verbose)))

(executable
 (name task_parallel)
 (modes native byte)
 (modules task_parallel)
 (libraries util qcheck domainslib))

(rule
 (alias runtest)
 (package multicoretests)
 (deps task_parallel.exe)
 (action (run ./%{deps} --no-colors --verbose)))


;; STM_Seq STM_Domain STM_Thread test of Domainslib.Chan

(executable
 (name chan_stm_tests)
 (modes native byte)
 (modules chan_stm_tests)
 (libraries util qcheck STM domainslib)
 (preprocess (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (deps chan_stm_tests.exe)
 (action (run ./%{deps} --no-colors --verbose)))
